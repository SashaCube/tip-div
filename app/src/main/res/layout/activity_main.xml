<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_grey"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_marginTop="-20dp"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:cardBackgroundColor="@color/night"
            app:cardCornerRadius="20dp">


        <EditText
                android:text="0"
                android:textStyle="bold"
                android:id="@+id/edit_text"
                android:layout_marginTop="60dp"
                android:gravity="center|bottom"
                android:textSize="36sp"
                android:maxLines="1"
                android:fontFamily="casual"
                android:inputType="number"
                android:background="@null"
                android:layout_width="match_parent"
                android:textColor="@color/light_cream"
                android:layout_height="76dp"/>


        <TextView
                android:layout_marginTop="120dp"
                android:id="@+id/total_text"
                android:textSize="20sp"
                android:text="@string/total"
                android:gravity="center|bottom"
                android:textColor="@color/light_gold"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
            android:id="@+id/counter_layout"
            android:layout_marginTop="64dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/diff_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_diff_button"/>
        <TextView
                android:id="@+id/count_text_view"
                android:text="1"
                android:textColor="@color/light_gold"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginEnd="42dp"
                android:layout_marginStart="42dp"
                android:layout_width="50dp"
                android:layout_height="42dp"/>

        <ImageView
                android:id="@+id/plus_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_plus_button"/>

    </LinearLayout>

    <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="38dp"
            android:id="@+id/list_layout"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/night"
                android:id="@+id/card_view_list_1"
                android:layout_width="330dp"
                android:layout_height="65dp"
                app:cardCornerRadius="20dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:padding="20dp"
                        android:text="@string/admin"
                        android:textColor="@color/light_gold"
                        android:textSize="20sp"
                        android:gravity="start"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/label_text_admin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:padding="20dp"
                        android:text="10%"
                        android:textColor="@color/light_gold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/procent_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:padding="20dp"
                        android:text="0"
                        android:textColor="@color/light_cream"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/sum_text_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/night"
                android:id="@+id/card_view_list_2"
                android:layout_width="330dp"
                android:layout_height="65dp"
                app:cardCornerRadius="20dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:padding="20dp"
                        android:text="@string/barman"
                        android:textColor="@color/light_gold"
                        android:textSize="20sp"
                        android:gravity="start"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/label_text_barman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:padding="20dp"
                        android:text="15%"
                        android:textColor="@color/light_gold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/procent_text_barman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:padding="20dp"
                        android:text="0"
                        android:textColor="@color/light_cream"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/sum_text_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/night"
                android:id="@+id/card_view_list_3"
                android:layout_width="330dp"
                android:layout_height="65dp"
                app:cardCornerRadius="20dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:padding="20dp"
                        android:text="@string/result"
                        android:textColor="@color/light_gold"
                        android:textSize="20sp"
                        android:gravity="start"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/label_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:padding="20dp"
                        android:text="75%"
                        android:textColor="@color/light_gold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/procent_text_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:padding="20dp"
                        android:text="0"
                        android:textColor="@color/light_cream"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/sum_text_75"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>